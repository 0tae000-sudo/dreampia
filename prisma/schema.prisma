generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id             Int        @id @default(autoincrement())
  email          String?    @unique
  password       String
  name           String
  phone          String     @unique
  howcome        String?
  graduationYear String?
  schoolName     String?
  major          String?
  introduction   String?
  role           String?
  isTeacher      Boolean?
  isMentor       Boolean?
  created_at     DateTime   @default(now())
  updated_at     DateTime   @updatedAt
  SMSToken       SMSToken[]
  mentorProfile  MentorProfile?
  agreementConsents AgreementConsent[]
  
}

model MentorProfile {
  id         Int         @id @default(autoincrement())
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int         @unique
  jobs       MentorJob[]
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
}

model MentorJob {
  id           Int                 @id @default(autoincrement())
  profile      MentorProfile       @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId    Int
  title        String
  order        Int
  careers      MentorCareer[]
  certificates MentorCertificate[]
  awards       MentorAward[]
  lectures     MentorLecture[]
}

model MentorCareer {
  id        Int       @id @default(autoincrement())
  job       MentorJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId     Int
  period    String?
  role      String?
  company   String?
}

model MentorCertificate {
  id      Int       @id @default(autoincrement())
  job     MentorJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId   Int
  date    String?
  name    String?
  issuer  String?
}

model MentorAward {
  id           Int       @id @default(autoincrement())
  job          MentorJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId        Int
  date         String?
  title        String?
  organization String?
}

model MentorLecture {
  id           Int       @id @default(autoincrement())
  job          MentorJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId        Int
  period       String?
  title        String?
  organization String?
}

model SMSToken {
  id         Int      @id @default(autoincrement())
  phone      String
  token      String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model PhoneVerificationToken {
  id         Int      @id @default(autoincrement())
  phone      String   @unique
  token      String
  expiresAt  DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Agreement {
  id         Int                @id @default(autoincrement())
  code       String             @unique
  created_at DateTime           @default(now())
  updated_at DateTime           @updatedAt
  versions   AgreementVersion[]
}

model AgreementVersion {
  id           Int               @id @default(autoincrement())
  agreement    Agreement         @relation(fields: [agreementId], references: [id], onDelete: Cascade)
  agreementId  Int
  version      String
  title        String
  body         String
  isRequired   Boolean           @default(true)
  role         AgreementRole     @default(ALL)
  isActive     Boolean           @default(true)
  created_at   DateTime          @default(now())
  updated_at   DateTime          @updatedAt
  consents     AgreementConsent[]

  @@unique([agreementId, version])
}

model AgreementConsent {
  id                 Int              @id @default(autoincrement())
  user               User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId             Int
  agreementVersion   AgreementVersion @relation(fields: [agreementVersionId], references: [id], onDelete: Cascade)
  agreementVersionId Int
  agreedAt           DateTime         @default(now())
}

enum AgreementRole {
  ALL
  TEACHER
  MENTOR
}
